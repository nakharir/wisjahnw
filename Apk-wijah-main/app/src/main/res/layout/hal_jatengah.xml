<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_bright_transparent"
    android:padding="16dp">

    <!-- Tombol Kembali Berbentuk Panah di Kiri -->
    <TextView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:textSize="38sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:layout_marginTop="-4dp"
        android:contentDescription="Back Button" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wijah"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Kolom Pencarian -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cari tempat..."
        android:background="@drawable/search_background"
        android:padding="10dp"
        android:layout_below="@id/title_text"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"
        android:inputType="text" />

    <!-- Container untuk foto dan teks di bawahnya -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/search_bar"
        android:layout_marginTop="32dp">

        <!-- Baris pertama dengan 2 foto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Foto pertama -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tombol_lawangsewu"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lawang_sewu_semarang"
                    android:contentDescription="Photo1"
                    android:clickable="true"
                    android:background="@drawable/candi_singosari"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pantai Kute Barat"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/address_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bali Denpasar"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Foto kedua -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tombol_kota"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kota_lama_semarang"
                    android:contentDescription="Photo2"
                    android:clickable="true"
                    android:background="@drawable/kota_lama_semarang"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Tempat 2"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/address_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat Tempat 2"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Baris kedua dengan 2 foto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Foto ketiga -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tombol_sempokong"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sampokong"
                    android:contentDescription="Photo 3"
                    android:clickable="true"
                    android:background="@drawable/sampokong"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/name_kidal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Candi Kidal"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/address_kidal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malang, Jawa Timur"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Foto keempat -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tombol_masjid"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/masjid"
                    android:contentDescription="Photo 4"
                    android:clickable="true"
                    android:background="@drawable/masjid"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/name_trowulan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Candi Trowulan"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/address_trowulan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mojokerto, Jawa Timur"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Baris ketiga dengan 2 foto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Foto kelima -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tombol_marabunta"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gedung_marabunta"
                    android:contentDescription="Photo 5"
                    android:clickable="true"
                    android:background="@drawable/gedung_marabunta"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/name_kediri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Candi Kediri"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/address_kediri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kediri, Jawa Timur"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Foto keenam -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tombol_keraton"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/keraton_kasunanan"
                    android:contentDescription="Photo 6"
                    android:clickable="true"
                    android:background="@drawable/keraton_kasunanan"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/name_jayabaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Candi Jayabaya"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/address_jayabaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jombang, Jawa Timur"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
